  // 

  /* blog section box height */ 
  var maxHeight = 0;
  $(".blogbox .blog-info").each(function () {
    if ($(this).height() > maxHeight) {
      maxHeight = $(this).height();
    } 
  }); 
  $(".blogbox .blog-info").height(maxHeight); 
  /* blog section box height  end*/  


  /* footer mobile Dropdown */ 
  // 
  $(".collapsed-mobile").click(function() {
    $(".footer-block").toggleClass("");
    $(this).toggleClass("open");
  });
  /* footer mobile Dropdown End*/ 
  // 
  /*start: plus-minus quantity box*/
  $('.qty-btn.plus').click(function (e) {
    // Stop acting like a button
    e.preventDefault();
    // Get the field name
    fieldName = $(this).attr('field');
    // Get its current value
    var currentVal = parseInt($('input[name=' + fieldName + ']').val());
    // If is not undefined
    if (!isNaN(currentVal)) {
      // Increment
      $('input[name=' + fieldName + ']').val(currentVal + 1);
    } else {
      // Otherwise put a 0 there
      $('input[name=' + fieldName + ']').val(1);
    }
  });
  // This button will decrement the value till 0
  $(".qty-btn.minus").click(function (e) {
    // Stop acting like a button
    e.preventDefault();
    // Get the field name
    fieldName = $(this).attr('field');
    // Get its current value
    var currentVal = parseInt($('input[name=' + fieldName + ']').val());
    // If it isn't undefined or its greater than 0
    if (!isNaN(currentVal) && currentVal > 1) {
      // Decrement one
      $('input[name=' + fieldName + ']').val(currentVal - 1);
    } else {
      // Otherwise put a 0 there
      $('input[name=' + fieldName + ']').val(1);
    }
  });
  /*end: plus-minus quantity box*/
  
  /*---------------- App Easy Responsive Tab ------------------*/
  if ($('#app-single-horizontal-tabs').length) {
    $('#app-single-horizontal-tabs').easyResponsiveTabs({
      type: 'default', //Types: default, vertical, accordion
      width: 'auto', //auto or any width like 600px
      fit: true, // 100% fit in a container
      tabidentify: 'hor_1', // The tab groups identifier
      activate: function(event) { // Callback function if tab is switched
        var $tab = $(this);
        var $info = $('#nested-tabInfo');
        var $name = $('span', $info);
        $name.text($tab.text());
        $info.show();
      }
    });
  }
  /*---------------- App Responsive Tab ------------------*/
  
});
