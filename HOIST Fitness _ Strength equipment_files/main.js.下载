  $('.shop-slider-nav').slick({
    slidesToShow: 4,
    slidesToScroll: 1,
    dots: false,
    arrows: false,
    centerMode: false,
    vertical: true,
    verticalSwiping: true,
    focusOnSelect: true,
    responsive: [
      {
        breakpoint: 768,
        settings: {
          slidesToShow: 4,
          slidesToScroll: 1,
          vertical: false,
        }
      }, 
      {
        breakpoint: 481,
        settings: {
          slidesToShow: 3,
          slidesToScroll: 1,
          vertical: false,
        }
      },
      {
        breakpoint: 381,
        settings: {
          slidesToShow: 2,
          slidesToScroll: 1,
          vertical: false,
        }
      }
    ]
  });

  /*---------------- List/Grid View ------------------*/
  $('.grid-view').on('click', function (e) {
    $('.forlistview').removeClass('list').addClass('medium-up--one-third');
  });
  $('.list-view').on('click', function (e) {
    $('.forlistview').removeClass('medium-up--one-third').addClass('list');
  });



  /*---------------- Equal Height Div ------------------*/

  var maxHeight = 0;

  $(".trendingnow .prod-title").each(function () {
    if ($(this).height() > maxHeight) {
      maxHeight = $(this).height();
    }
  });

  $(".trendingnow .prod-title").height(maxHeight);

  // 
  var maxHeight = 0;

  $(".ftr-box h2").each(function () {
    if ($(this).height() > maxHeight) {
      maxHeight = $(this).height();
    }
  });

  $(".ftr-box h2").height(maxHeight);

  // 

  var maxHeight = 0;

  $(".mega-menu-dropdown .cate-type h5").each(function () {
    if ($(this).height() > maxHeight) {
      maxHeight = $(this).height();
    }
  });

  $(".mega-menu-dropdown .cate-type h5").height(maxHeight);


  /*---------------- testimonial-slider ------------------*/ 
  $('.testimonial-slider').slick({
